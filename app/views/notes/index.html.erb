<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Notas</h1>

      <div class="text-right">
        <%= link_to "Nueva Nota", new_note_path, class: "btn btn-primary" %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>Fecha</th>
            <th>Nota</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @notes.each do |note| %>
          <tr>
            <td><%= note.created_at %></td>
            <td><%= markdown note.content %></td>
            <td><%= link_to "Ver", note %> <%= link_to "Editar", edit_note_path(note) %> <%= link_to "Eliminar", note, method: :delete %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>